@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="container">
<br>
<h2>Edit</h2>
<h4>Edit the specs for: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)

  @Html.LabelFor(model => model.InstallDate)
  @Html.TextBoxFor(model => model.InstallDate)

  @Html.LabelFor(model => model.MachineDetails)
  @Html.TextBoxFor(model => model.MachineDetails)

  <input type="submit" value="Save" class="btn btn-info"/>
}
<br>
<p>@Html.ActionLink("Back to Machine Inventory", "Index")</p>
</div>