@{
  Layout = "_Layout";
}

@using Factory.Models;
<div class="container">
<br>
<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been installed yet!</h3>
} 

<ul>
  @foreach(Machine machine in Model)
  {
    <li><h3>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h3></li>
  }
</ul>
<br>
<p>@Html.ActionLink("Install New Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>