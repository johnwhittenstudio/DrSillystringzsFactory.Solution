@{
  Layout = "_Layout";
}

@using Factory.Models;
<div class="container">
<br>
<br>
<div class="column">
  <div class=row>
  &nbsp;
  &nbsp;
  &nbsp;
  &nbsp;  
    <div class="card border-info mb-3" style="max-width: 40rem;">
      <div class="card-header">
      <h1>Machines</h1>
        @if (@Model.Count == 0)
        {
        <h3>No machines have been installed yet!</h3>
        } 
      </div>
      <div class="card-body">
        @foreach(Machine machine in Model)
        {
          <li><h3>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h3></li>
        }
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <div class="col-md-3">
    <br>
    <button type="button" class="btn btn-info" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Install New Machine", "Create")</button>
    <br>
    <br>
    <hr>
    <button type="button" class="btn btn-info" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button>
    </div>   
  </div>
</div>