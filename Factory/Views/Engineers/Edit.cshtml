@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div class="container">
<br>
<h2>Reassign</h2>

<h4>Reassign this Engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)

  @Html.LabelFor(model => model.HireDate)
  @Html.TextBoxFor(model => model.HireDate)

  @Html.Label("Assign Machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" class="btn btn-info"/>
}
<br>
<p>@Html.ActionLink("Back to Roster", "Index")</p>
</div>