@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Engineer Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h4>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h4>
<h5>@Html.DisplayNameFor(model => model.HireDate): @Html.DisplayFor(model => model.HireDate)</h5>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This Engineer has not been assigned to any machines</p>
}
else
{
  <h4>Machines this Engineer is assigned to:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Machine.MachineName</li>
      @using (Html.BeginForm("DeleteMachine", "Engineers"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<p>@Html.ActionLink("Assign a Machine", "AddMachine", new { id = Model.EngineerId })</p>

<p>@Html.ActionLink("Back to List", "Index")</p>
<p>@Html.ActionLink("Reassign Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Decommission Engineer", "Delete", new { id = Model.EngineerId })</p>