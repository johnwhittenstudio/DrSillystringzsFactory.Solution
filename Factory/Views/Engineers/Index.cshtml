@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;
<div class="container">
<br>
<br>
<div class="column">
  <div class=row>
  &nbsp;
  &nbsp;
  &nbsp;
  &nbsp;
    <div class="card border-primary mb-3" style="max-width: 40rem;">
      <div class="card-header">
        <h1>Engineers </h1>
          @if (@Model.Count == 0)
          {
            <h3>No engineers have been hired yet!</h3>
          } 
      </div>
      <div class="card-body">
        @foreach (Engineer engineer in Model)
        {
          <li><h3>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</h3></li>
        }
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
      <div class="col-md-3">
      <br>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Hire new engineer", "Create")</button>
      <br>
      <br>
      <hr>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button>
      </div>
  </div>
</div>